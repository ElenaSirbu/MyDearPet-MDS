<!-- views/animal_detail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Detalii Animal</title>
</head>
<body>
    <h1>Detalii despre <%= pet.species %></h1>
    <p>Rasă: <%= pet.breed %></p>
    <p>Vârstă: <%= pet.age %> ani</p>
    <p>Descriere: <%= pet.description %></p>
    <% if (pet.photo_url) { %>
        <img src="<%= pet.photo_url %>" alt="<%= pet.species %>">
    <% } %>
    <a href="/explore">Înapoi la Lista de Animale</a>
</body>
</html>
